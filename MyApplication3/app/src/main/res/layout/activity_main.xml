<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/blue"

    tools:context="triet.ngo160208vnuk.MainActivity">

    <ImageView
        android:id="@+id/imv_fb"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="@dimen/edt_magin_left"
        android:layout_marginRight="@dimen/edt_magin_right"
        android:layout_marginBottom="@dimen/edt_magin_bottom"
        android:background="@drawable/image_facebook"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/imv_fb"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@+id/imageView"
        android:background="@drawable/snow" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/btn_sign_up"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginEnd="13dp"
        android:background="@drawable/question_image"
        android:id="@+id/imageView" />
    <EditText
        android:id="@+id/edit_email"
        android:layout_below="@id/imv_fb"
        android:layout_marginTop="@dimen/edt_magin_top"
        android:layout_marginLeft="@dimen/edt_magin_left"
        android:layout_marginRight="@dimen/edt_magin_right"
        android:layout_marginBottom="@dimen/edt_magin_bottom"
        android:padding="@dimen/text_padding"
        android:textColor="@color/black"
        android:background="@drawable/botron"

        android:hint="@string/hint_email_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_pass"
        android:layout_below="@id/edit_email"
        android:layout_marginTop="@dimen/edt_magin_top"
        android:layout_marginLeft="@dimen/edt_magin_left"
        android:layout_marginRight="@dimen/edt_magin_right"
        android:layout_marginBottom="@dimen/edt_magin_bottom"
        android:padding="@dimen/text_padding"
        android:textColor="@color/black"

        android:background="@drawable/botron"



        android:hint="@string/hint_pass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_login"
        android:layout_below="@id/edit_pass"
        android:layout_marginTop="@dimen/edt_magin_top"
        android:layout_marginLeft="@dimen/edt_magin_left"
        android:layout_marginRight="@dimen/edt_magin_right"
        android:background="@drawable/botron1"
        android:textColor="@color/white"
        android:text="@string/text_login"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn_sign_up"
        android:layout_marginLeft="@dimen/edt_magin_left"
        android:layout_marginRight="@dimen/edt_magin_right"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="@dimen/text_padding"
        android:textColor="@color/white"
        android:text="@string/text_sign_up"
        android:textSize="@dimen/text_size_small"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
